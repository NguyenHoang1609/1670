@model ASP_GCH1108.Models.JobApplication

@{
    ViewData["Title"] = "Job Application Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Job Application</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Introduction</dt>
        <dd class="col-sm-10">@Model.Introduction</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Experience</dt>
        <dd class="col-sm-10">@Model.Experience Month</dd>

        <dt class="col-sm-2">Profile Id</dt>
        <dd class="col-sm-10">@Model.ProfileId</dd>
        <dd><a asp-controller="Profiles" asp-action="Details" asp-route-id="@Model.ProfileId" class="btn btn-success">Detail Profile</a></dd>


        <dt class="col-sm-2">Picture</dt>
        <dd class="col-sm-10">
            <img src="~/images/@Model.UrlImage" alt="Application Image" style="max-width: 200px; max-height: 200px;" />
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ApplicationId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
