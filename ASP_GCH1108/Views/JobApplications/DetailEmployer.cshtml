@model ASP_GCH1108.Models.JobApplication

@{
    ViewData["Title"] = "Job Application Details";
}

<div class="container">
    <h2 class="text-center mt-5">@Model.JobList.JobTitle - Application Details</h2>

    <div class="card mt-4">
        <div class="card-header">
            <h3>@Model.User.UserName</h3>
        </div>
        <div class="card-body">
           @*  <h5 class="card-title">Qualification: @Model.Qualification.Name</h5> *@
            <p class="card-text">Job Applied: @Model.JobList.JobTitle</p>
            <p class="card-text">Status: @(Model.Status == true ? "Accepted" : "Waiting")</p>
        </div>
    </div>
</div>

<style>
    .container {
        max-width: 800px;
        margin: auto;
    }

    .card {
        border: 1px solid #ddd;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #007bff;
        color: white;
    }

    .card-body {
        background-color: #f8f9fa;
    }

    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .mt-5 {
        margin-top: 3rem;
    }
</style>